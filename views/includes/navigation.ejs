<header class="main-header">
    <div class="container">
        <nav class="main-header__nav">
            <ul class="main-header__item-list">
                <li class="main-header__item">
                    <a class="<%= path === '/' ? 'active' : ''%> header-link" href="/">Shop</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/products' ? 'active' : ''%> header-link" href="/products">Products</a>
                </li>
                <% if (isLogged) { %>
                    <li class="main-header__item">
                        <a class="<%= path === '/cart' ? 'active' : ''%> header-link" href="/cart">Cart</a>
                    </li>
                    <li class="main-header__item">
                        <a class="<%= path === '/orders' ? 'active' : ''%> header-link" href="/orders">Orders</a>
                    </li>
                    <li class="main-header__item">
                        <a class="<%= path === '/admin/add-product' ? 'active' : ''%> header-link"
                            href="/admin/add-product">Add
                            Products</a>
                    </li>
                    <li class="main-header__item">
                        <a class="<%= path === '/admin/products' ? 'active' : ''%> header-link"
                            href="/admin/products">Admin
                            Products</a>
                    </li>
                    <% } %>
            </ul>
            <ul class="main-header__item-list">
                <% if(!isLogged) { %>
                    <li class="main-header__item">
                        <a class="<%= path === '/login' ? 'active' : ''%> header-link" href="/login">Login</a>
                    </li>
                    <li class="main-header__item">
                        <a class="<%= path === '/signup' ? 'active' : ''%> header-link" href="/signup">Sign Up</a>
                    </li>
                    <% } else { %>
                        <li>
                            <form class="main-header__item" action="/logout" method="post">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button style="border: none; cursor: pointer; background-color: transparent;"
                                    class="header-link" type="submit">Logout</button>
                            </form>
                        </li>

                        <% } %>
            </ul>
        </nav>
    </div>
</header>